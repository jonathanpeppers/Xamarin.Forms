{
    "$schema": "http://json.schemastore.org/template",
    "author": "Microsoft",
    "classifications": [ "Maui", "Android", "iOS" ],
    "identity": "Microsoft.Maui.SingleProject",
    "name": ".NET Maui Mobile Application",
    "description": "A project for creating a .NET Maui application for iOS and Android",
    "shortName": "maui-mobile",
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "sourceName": "MauiApp1",
    "preferNameDirectory": true,
    "primaryOutputs": [
      { "path": "MauiApp1.csproj" }
    ],
    "symbols": {
      "applicationId": {
        "type": "parameter",
        "description": "Overrides the $(ApplicationId) in the project",
        "datatype": "string",
        "replaces": "com.companyname.MauiApp1"
      }
    },
    "defaultName": "MauiApp1"
  }